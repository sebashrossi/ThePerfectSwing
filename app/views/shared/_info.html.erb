<div class="alert alert-dismissible fade show quiz-results centered-quiz" role="alert">
  <div class="d-flex h-100 flex-column justify-content-between">
    <div class="quiz-result-header justify-content-center">
      <div class="quiz-result-header-greeting d-flex justify-content-center my-3">
        <% if @section_user.quiz_score > 80 %>
        <h2 class="correct" id="results-title">CONGRATULATIONS!</h2>
        <% else %>
        <h2 id="results-title-wrong">PLEASE TRY AGAIN!</h2>
        <% end %>
      </div>
    </div>
    <div class="mb-3">
      <h3 class=" quiz-number-score mx-4 mb-5"><%= ((@section_user.quiz_score  / 100.0) * @questions.length).round %> / <%= @questions.length %></h3>
      <h4 id="correct-answers">Quiz Correction</h4>
    </div >
    <div class="displayed-question scrollbar-hidden mb-3">
      <% @questions.each_with_index do |question, index| %>
        <h4><%= index + 1 %>- <%= question.content %></h4>
        <p class="correct"><%= question.answer %></p>
      <% end %>
    </div>
    <div class="d-flex justify-content-between align-items-end mb-3 mt-0">
      <%= link_to "Return to quiz", section_path %>
      <%= link_to "Go to Dashboard", dashboard_path, style: "margin-right: -22px"%>
    </div>
  </div>
  <%# keep below  %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span>
  </button>
</div>
