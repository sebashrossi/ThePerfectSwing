<div class="alert alert-dismissible fade show quiz-results" role="alert">
  <div class="d-flex h-100 flex-column justify-content-between">
    <div class="quiz-result-header justify-content-center">
      <div class="quiz-result-header-greeting d-flex justify-content-center my-3">
        <% if @section_user.quiz_score > 80 %>
        <h2 class="correct">CONGRATULATIONS!</h2>
        <% else %>
        <h2 style="color: red;">PLEASE TRY AGAIN!</h2>
        <% end %>
      </div>
    </div>
    <div class="mb-3">
      <h3 class="mx-4">Section: <%= @section.name %></h3>
      <h3 class="mx-4 mb-5">Quiz Score: <%= ((@section_user.quiz_score  / 100.0) * @questions.length).round %> / <%= @questions.length %></h3>
      <h4>Correct answers: </h4>
    </div >
    <div class="displayed-question scrollbar-hidden mb-3">
      <% @questions.each_with_index do |question, index| %>
        <h4><%= index + 1 %>- <%= question.content %></h4>
        <p class="correct"><%= question.answer %></p>
      <% end %>
    </div>
    <div class="d-flex justify-content-between align-items-end">
      <%= link_to "Return to quiz", section_path %>
      <%= link_to "Go to Dashboard", dashboard_path %>
    </div>
  </div>
  <%# keep below  %>
  <button type="button" class="close" data-dismiss="alert" aria-label="Close">
  <span aria-hidden="true">&times;</span>
  </button>
</div>
