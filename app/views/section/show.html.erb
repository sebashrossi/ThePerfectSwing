<div class="container justify-content-center text-center">
<h1><%= @section.name %></h1>
  <div class="row d-flex justify-content-center">
    <div class="col-6">
      <iframe width="560" height="315" src="<%= @section.embedded_video_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
  <div class="row">
  <div class="container mt-sm-5 my-1">
    <%  @questions.each do |question|%>
    <div class="question-quiz ml-sm-5 pl-sm-5 pt-2">
        <div class="py-2 h5"><b><%= question.content %></b></div>
        <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options-quiz"> 
          <% question.shuffle_answers.each do |possible_answer| %>
        <label class="options-quiz"><%= possible_answer %> <input type="radio" name="radio"> <span class="checkmark-quiz"></span></label> 
        <% end %>
        </div>
    </div>
    <% end %>
  </div>
</div>

