<div class="section-show">
  <div class="quiz-page d-flex">
    <%= render 'shared/sidebar' %>
    <div class="quiz-section">
      <div class="text-section">
        <p>Keep it up <%= current_user.first_name %> <%= current_user.last_name %>!</p>
        <h2><%= @training.name %></h2>
        <h3><%= @section.name %></h3>
        <p>Lorem ipsum, dolor sit amet consectetur adipisicing elit. Cupiditate modi officia sed quos porro nam nisi, est rem ipsa reiciendis ipsam repudiandae tempore deleniti eaque, tempora asperiores, itaque corporis sunt?</p>
        </div>
        <div class="mt-5">
          <div>
            <iframe width="560" height="300" src="<%= @section.embedded_video_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        </div>
        <div class="quiz-section">
          <div class="quiz-form">
          <h1><%= @section_user.quiz_score %></h1>
            <%= simple_form_for :answers, url: section_user_path(@section_user), method: :patch do |f| %>
                <% @questions.each_with_index do |question, index| %>
                <div class="bg-light mb-2 w-50 <%= @questions.first == question ? "" : "d-none"%>" data-step="<%= index %>">
                  <div class="d-flex ">
                  <p><%= question.content %></p>
                  <p><%= index + 1 %>/<%= @questions.length %></p>
                  </div>
                  <%= f.simple_fields_for "question_#{question.id}".to_sym do |z| %>
                    <%= z.collection_radio_buttons :selected_answer, question.shuffle_answers, :first, :last %>
                  <% end %>
                  <div class= "d-flex justify-content-between">
                  <% if question != @questions.last %>
                    <button type="button" data-next-step="<%= index + 1 %>">Next</button>
                  <% else %> 
                    <%= f.submit %>
                  <% end %>
                  </div>
                </div>
                <% end %>
            <% end %>
          </div>
      </div>
      </div>
    </div>
</div>