<%= render 'shared/navbar' %>
<div class="container justify-content-center text-center">
  <div class="row d-flex flex-column mt-5 justify-content-center">
    <h1><%= @section.name %></h1>
    <div class="col-6">
      <iframe width="560" height="315" src="<%= @section.embedded_video_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
    </div>
  </div>
  <div class="row d-flex flex-column justify-content-center">
  <div class="container-quiz mt-sm-5 my-1">
    <%  @questions.each do |question|%>
    <div class="question-quiz pt-2">
        <div class="py-2 h5"><b><%= question.content %></b></div>
        <div class="ml-md-3 ml-sm-3 pl-md-5 pt-sm-0 pt-3" id="options-quiz"> 
          <% question.shuffle_answers.each do |possible_answer| %>
        <label class="options-quiz"><%= possible_answer %> <input type="radio" name="radio"> <span class="checkmark-quiz"></span></label> 
        <% end %>
        </div>
    </div>
    <% end %>
  </div>
  <div class="row d-flex justify-content-center">
  <%= link_to "Return to Trainings", training_path(current_user), class: "btn-secondary py-2 px-4 m-2" %>
  <%= link_to "Submit Quiz", section_user_path(@section, current_user), class: "btn-primary py-2 px-4 m-2" %>
  </div>
</div>

