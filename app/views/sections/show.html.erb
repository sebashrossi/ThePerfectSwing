<div class="section-show">
  <div class="quiz-page d-flex">
    <%= render 'shared/sidebar' %>
   <div class="top-section">
    <p class="mb-4">Keep it up <%= current_user.first_name %> <%= current_user.last_name %>!</p>
    <div class="text-score d-flex justfiy-content-between">
      <div class="text-section mb-4">
        <h2><%= @training.name %></h2>
        <h3 class= "mb-4"><%= @section.name %></h3>
        <p><%= @section.description %></p>
      </div>
      <div class="score">
        <h3>Quiz answers</h3>
        <h2>33/35</h2>
        <p style="color: white">correct answers</p>
        <p style="color: $cool-lightsaber">check correction</p>
      </div>
      </div>
          <div>
            <iframe width="560" height="300" src="<%= @section.embedded_video_url %>" frameborder="0" allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture" allowfullscreen></iframe>
          </div>
        <div class="quiz-section">
          <div class="quiz-form quiz-content">
          <h3 class= "mb-4">Quiz</h3>
            <%= simple_form_for :answers, url: section_user_path(@section_user), method: :patch do |f| %>
                <% @questions.each_with_index do |question, index| %>
                <div class="mb-2 <%= @questions.first == question ? "" : "d-none"%>" data-step="<%= index %>">
                  <div class="d-flex">
                  <p style="width: 80%"><%= question.content %></p>
                  <p><%= index + 1 %>/<%= @questions.length %></p>
                  </div>
                  <%= f.simple_fields_for "question_#{question.id}".to_sym do |z| %>
                  <div class="answers">
                  <%= z.collection_radio_buttons :selected_answer, question.shuffle_answers, :first, :last %>
                  </div>
                  <% end %>
                  <% if question != @questions.last %>
                    <button class="next-btn" type="button" data-next-step="<%= index + 1 %>">Next</button>
                  <% else %>
                    <%= f.submit 'Submit', class: 'submit-btn' %>
                  <% end %>
                </div>
                <% end %>
            <% end %>
          </div>
        </div>
    </div>
  </div>
</div>
